{
  "manifest_version": 3,
  "name": "AppScout - Security Analyzer",
  "version": "2.1.0",
  "description": "Detects and blocks ClickFix attacks, phishing, overlays, and suspicious permissions",
  "permissions": [
    "activeTab",
    "contentSettings",
    "clipboardRead",
    "clipboardWrite",
    "notifications",
    "storage",
    "tabs",
    "webNavigation"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "action": {
    "default_popup": "popup.html"
  }
}
